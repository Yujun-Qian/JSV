{
  "type" : "object",
  "properties" : {
    "users" : {
      "type" : "array",
      "items" : { 
        "type" : "object",
        "properties" : {
          "id": { "type": "number" },
          "username": { "$ref" : "name" },
          "numPosts": { "type" : "string", "pattern" : "^[a-z]$"},
          "realName": { "$ref" : "realname", "optional": true }
        }
      }
    }
  }
}
